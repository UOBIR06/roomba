<?xml version="1.0"?>
<launch>
    <!-- Because the simulator has time manipulation powers, force everyone to follow it instead of the system time -->
    <param name="/use_sim_time" value="true"/>

    <!-- Visualizer and simulator -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find roomba)/launch/default.rviz"/>
    <node name="stage" pkg="stage_ros" type="stageros" args="--clock $(find socspioneer)/data/meeting.world"/>

    <include file="$(find roomba)/launch/room_exploration.launch" />
    <!-- Alternative SLAM package -->
    <!--node name="slam" pkg="hector_mapping" type="hector_mapping">
        <param name="pub_map_odom_transform" value="true"/>
        <param name="map_frame" value="map"/>
        <param name="base_frame" value="base_link"/>
        <param name="odom_frame" value="odom"/>
        <param name="map_resolution" value="0.05"/>
        <param name="laser_min_dist" value="0"/>
        <param name="laser_max_dist" value="5.6"/>
        <param name="scan_topic" value="base_scan"/>
    </node-->

    <!-- SLAM package: Publish period adjusted to silence errors (change it and see for yourself) -->
    <node name="slam" pkg="gmapping" type="slam_gmapping" args="scan:=base_scan">
        <param name="transform_publish_period" value="1"/>
    </node>

    <!-- Our node :) -->
    <!--node name="explore" pkg="roomba" type="explore.py"/-->

    <!-- Teleop (for convenience) -->
    <!--include file="$(find socspioneer)/launch/keyboard_teleop.launch"/-->

    <!-- Navigation stack setup -->
    <node name="nav" pkg="move_base" type="move_base" respawn="false" output="screen">
        <rosparam file="$(find roomba)/launch/costmap_common_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find roomba)/launch/costmap_common_params.yaml" command="load" ns="local_costmap"/>
        <rosparam file="$(find roomba)/launch/local_costmap_params.yaml" command="load"/>
        <rosparam file="$(find roomba)/launch/global_costmap_params.yaml" command="load"/>
        <rosparam file="$(find roomba)/launch/base_local_planner_params.yaml" command="load"/>
    </node>
</launch>
