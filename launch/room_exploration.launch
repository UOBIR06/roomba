<?xml version="1.0"?>
<launch>

    <!-- Visualizer and simulator -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find roomba)/data/rviz/room_explore.rviz"/>
    <!--    <node name="stage" pkg="stage_ros" type="stageros" args="-clock $(find roomba)/data/sim_data/meeting.world"/>-->
    <!--rosrun map_server map_server src/pf_localisation/data/sim_data/meeting.yaml -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find roomba)/data/sim_data/meeting.yaml" />

    <!-- room_segmentation -->
    <node ns="room_segmentation" pkg="ipa_room_segmentation" type="room_segmentation_server" name="room_segmentation_server" output="screen" respawn="true" respawn_delay="2">
        <rosparam command="load" file="$(find roomba)/data/param/room_segmentation_action_server_params.yaml"/>
    </node>

    <!-- room exploration server node -->
    <node ns="room_exploration" pkg="ipa_room_exploration" type="room_exploration_server" name="room_exploration_server" output="screen" respawn="true" respawn_delay="2">
        <rosparam command="load" file="$(find roomba)/data/param/room_exploration_action_server_params.yaml"/>
    </node>


<!--    <node ns="roomba" pkg="roomba" type="room_ipa.py" name="room_segmentation" output="screen"/>-->

</launch>
